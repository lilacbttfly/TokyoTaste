@{
    ViewData["Title"] = "Home Page";
}


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<div class="text-center justify-content-center align-content-center d-flex">

    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <style>
            #carouselExampleAutoplaying .carousel-inner img {
                width: 100%;
                object-fit: cover;
            }

            <style>.container {
                display: flex;
            }

            .image {
                max-width: 50%;
            }

            .image-container {
                flex: 1;
                max-width: 50%;
                height: auto;
            }


            .text-container {
                flex: 1;
                max-width: 50%;
                padding: 20px;
                background-color: #ffcc00;
            }

            .colored-background {
                background-color: #ffcc00;
                padding: 10px;
            }

            p {
                color: #000;
            }

            .card {
                width: 250px;
                border: 1px solid #ccc;
                margin: 10px;
                position: relative;
                display: flex;
                flex-direction: column;
            }

            .card-image {
                width: 249px;
                height: 295px;
            }

            .card-text {
                position: absolute;
                bottom: 0;
                left: 0;
                color: #fff;
                padding: 5px;
                width: 100%;
                box-sizing: border-box;
                flex-grow: 1;
            }

            .card-title {
                font-size: 50px;
            }

            .borda {
                background-color: #FF0000;
                color: #000;
            }

            hr {
                border-top: 1px dashed #f00;
                border-bottom: 1px solid #f00;
                color: #fff;
                background-color: #fff;
                height: 30px;
            }
        </style>

        <div id="carouselAutoplaying" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/imagens/Links.png" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/imagens/Links1.png" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/imagens/Links2.png" class="d-block w-100">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselAutoplaying"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselAutoplaying"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <hr>
        <div class="container-fluid text-center justify-content-center">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="fonte-cool text-white">Explore os sabores da </h1>
                    <h1 class="fonte-nova text-danger ms-3">culinária japonesa</h1>
                    <h1 class="fonte-cool text-white ms-3">em nosso restaurante!</h1>
                </div>
            </div>

            <div class="row ">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0">
                        <img src="~/imagens/pexels-cottonbro-studio-3338500.jpg" class="card-img-top">
                        <div class="card-body bg-black bg-opacity-0">
                            <img src="~/imagens/COMBOS.png" class="img-fluid"
                                style="margin-top: -200px; max-height: 31.89px">
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0">
                        <img src="~/imagens/pexels-ivan-samkov-8951203.jpg" class="card-img-top">
                        <div class="card-body bg-black bg-opacity-0">
                            <img src="~/imagens/Variedades.png" class="img-fluid"
                                style="margin-top: -200px; max-height: 31.89px">
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0">
                        <img src="~/imagens/pexels-cottonbro-studio-3297801.jpg" class="card-img-top">
                        <div class="card-body bg-black bg-opacity-0">
                            <img src="~/imagens/barcas.png" class="img-fluid"
                                style="margin-top: -200px; max-height: 31.89px">
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0">
                        <img src="~/imagens/pexels-marcos-kohler-17178435.jpg" class="card-img-top">
                        <div class="card-body bg-black bg-opacity-0">
                            <img src="~/imagens/aperitivos.png" class="img-fluid"
                                style="margin-top: -200px; max-height: 31.89px">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="carouselExampleAutoplaying" data-bs-ride="carousel">
            <hr>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/imagens/Links3.png" class="d-block w-100 mb-5" data-bs-toggle="modal"
                        data-bs-target="#imagemModal">
                </div>
            </div>
            <hr>
        </div>
        <div class="modal fade" id="imagemModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content bg-black bg-opacity-75"
                    style="backdrop-filter: blur(5px); box-shadow: 0px 4px 16px #FA5E64; border: 2px solid #D6242B">
                    <a class="btn-close" data-bs-dismiss="modal"></a>
                    <div class="modal-body">
                        <img src="~/imagens/linkimg.png" class="img-fluid" style="max-height: 600px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TokyoTasteCrud</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TokyoTasteCrud.styles.css" asp-append-version="true" />
</head>


<body class="bg-black">
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom box-shadow">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/imagens/Logogggg 3.png" alt="Logo 1" class="navbar-logo image-fluid" style="max-height: 54px;">
            <img src="~/imagens/Group 20.png" alt="Logo 2" class="navbar-logo image-fluid logo" >
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link fonte-nova fs-1 text-white" asp-area="" asp-controller="Login" asp-action="Index">entrar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fonte-nova fs-1 text-white" asp-area="" asp-controller="Home" asp-action="Produtos">Produtos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<footer style="background-color: #000; color: #FF0000; padding: 20px;">
    <div style="text-align: center;">
        <h3 class="fonte-cool"><i class="bi bi-star-fill"></i> Contate-nos <i class="bi bi-star-fill"></i></h3>
        <p class="text-secondary">Tire suas dúvidas, faça sugestões ou apenas diga olá.</p>
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <a href="mailto:cliente@tokyotaste.dining" style="text-decoration: none; color: #FF0000; margin-right: 20px;">Email
            : cliente@tokyotaste.dining</a>
        <a href="tel:+55123456789" style="text-decoration: none; color: #FF0000;">Telefone: 3540-6678</a>
    </div>
    <div class="text-secondary" style="text-align: center; margin-top: 20px;">
        <a href="#"><i class="bi bi-facebook"></i> Facebook</a>
        <a href="#"><i class="bi bi-twitter-x"></i> Twitter</a>
        <a href="#"><i class="bi bi-instagram"></i> Instagram</a>
    </div>


    <div style="text-align: center; margin-top: 20px;">
        &copy; 2023 Tokyo Taste - Todos os direitos reservados
    </div>
</footer>

</html>

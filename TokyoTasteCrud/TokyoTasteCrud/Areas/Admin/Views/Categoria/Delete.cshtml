@model App.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}


<div class="container text-white fonte-cool">
    <h1>Deletar</h1>
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

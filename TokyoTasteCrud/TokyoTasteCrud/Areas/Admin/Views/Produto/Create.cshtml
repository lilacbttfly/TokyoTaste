@model App.Models.Produto

@{
    ViewData["Title"] = "Create";
}
<div class="container">

<h1 class="text-white fonte-cool">Cadastre o prato</h1>
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoNome" class="control-label fonte-cool">Nome do prato</label>
                <input asp-for="ProdutoNome" class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                <span asp-validation-for="ProdutoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label fonte-cool">Preço</label>
                <input asp-for="Preco" class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label fonte-cool">Foto</label>
                <input asp-for="Foto" class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label fonte-cool">Categoria</label>
                <select asp-for="CategoriaId" class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger mt-3 fonte-cool" />
            </div>
        </form>
    </div>
</div>
</div>


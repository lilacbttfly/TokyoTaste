@model App.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="text-white fonte-cool">Edite o usu√°rio</h1>
    <div class="row text-white">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger fonte-cool"></div>
                <input type="hidden" asp-for="UsuarioId" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Nome" class="text-danger fonte-cool"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Imagem" class="control-label"></label>
                    <input asp-for="Imagem"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Imagem" class="text-danger fonte-cool"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Login" class="text-danger fonte-cool"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Senha" class="text-danger fonte-cool"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-danger fonte-cool mt-3" />
                </div>
            </form>
        </div>
    </div>
</div>

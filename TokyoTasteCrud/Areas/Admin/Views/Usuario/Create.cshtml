@model App.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<div class="container">

    <h1 class="text-white fonte-cool">Cadastre o administrador</h1>
    <div class="row text-white">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label fonte-cool"></label>
                    <input asp-for="Nome"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Imagem" class="control-label fonte-cool"></label>
                    <input asp-for="Imagem"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label fonte-cool"></label>
                    <input asp-for="Login"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label fonte-cool"></label>
                    <input asp-for="Senha"
                        class="form-control fonte-cool bg-secondary border-bottom-2 border-top-0 border-start-0 border-end-0 text-white" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-danger mt-3 fonte-cool" />
                </div>
            </form>
        </div>
    </div>
</div>

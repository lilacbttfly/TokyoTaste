@model App.Models.Produto

@{
    ViewData["Title"] = "Delete";
}


<div class="container text-white fonte-cool">
    <h1>Deletar</h1>
    <dl class="row">
        <dt class="col-sm-2">
            Nome do prato </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
        <dt class="col-sm-2">
Descrição        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
Preço        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
Foto        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Foto)" alt="Imagem" style="height: 100px;">
        </dd>
        <dt class="col-sm-2">
Categoria        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.ProdutoNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoNome" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
